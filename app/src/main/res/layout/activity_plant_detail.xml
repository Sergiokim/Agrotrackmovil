<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".ui.plant.detail.PlantDetailActivity">

    <!-- Hero Section -->
    <LinearLayout
        android:id="@+id/hero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@drawable/hero_gradient"
        android:gravity="center"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/DashboardHero">

        <TextView
            android:id="@+id/hero_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Planta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            style="@style/HeroTitle" />
    </LinearLayout>

    <!-- Planta Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/planta_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/hero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background">

                <!-- Imagen -->
                <ImageView
                    android:id="@+id/planta_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagen de la planta"
                    android:visibility="visible"
                    android:layout_marginBottom="16dp" />

                <!-- Info Section -->
                <LinearLayout
                    android:id="@+id/info_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/nombre_cientifico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre científico: No disponible"
                        android:textSize="16sp"
                        android:textColor="@color/text"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/coordenadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coordenadas: Lat: No disponible, Lon: No disponible"
                        android:textSize="16sp"
                        android:textColor="@color/text"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/fecha_creacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de creación: No disponible"
                        android:textSize="16sp"
                        android:textColor="@color/text"
                        android:layout_marginBottom="8dp" />

                    <!-- Climate Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/climate_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="4dp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/card_background">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos Climáticos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />

                            <TextView
                                android:id="@+id/temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temperatura: No disponible"
                                android:textSize="16sp"
                                android:textColor="@color/text"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Humedad: No disponible"
                                android:textSize="16sp"
                                android:textColor="@color/text"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/no_climate_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay datos climáticos disponibles"
                        android:textSize="16sp"
                        android:textColor="@color/text"
                        android:visibility="gone"
                        android:layout_marginTop="16dp" />
                </LinearLayout>

                <!-- Button Group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/edit_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Editar"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Editar planta"
                        app:backgroundTint="@null"
                        style="@style/SubmitButton" />

                    <Button
                        android:id="@+id/add_plant_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Agregar Planta"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="Agregar nueva planta"
                        app:backgroundTint="@null"
                        style="@style/SubmitButton" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/back_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Volver"
                        android:background="@drawable/cancel_button_background"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Volver a la pantalla anterior"
                        app:backgroundTint="@null"
                        style="@style/ButtonSecondary" />

                    <Button
                        android:id="@+id/delete_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Eliminar"
                        android:background="@drawable/logout_button_background"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Eliminar planta"
                        app:backgroundTint="@null"
                        style="@style/ButtonSecondary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/error"
        android:textSize="16sp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/hero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Not Found Message -->
    <TextView
        android:id="@+id/not_found_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Planta no encontrada"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/error"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/hero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>