<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/login_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="448dp"
        android:orientation="vertical"
        android:padding="28dp"
        android:background="@drawable/card_background"
        android:elevation="6dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        style="@style/LoginCard">

        <!-- Hero Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="@drawable/hero_gradient"
            android:gravity="center"
            android:elevation="2dp"
            android:clipToPadding="false"
            style="@style/HeroSection">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agrotrack"
                android:textSize="40sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"
                style="@style/HeroTitle" />

            <TextView
                style="@style/HeroSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.85"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="2dp"
                android:text="Accede a tu cuenta para gestionar tus cultivos"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Login Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="28dp"
            style="@style/LoginForm">

            <!-- Email Input Group -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                style="@style/InputGroup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text"
                    android:layout_marginBottom="6dp"
                    style="@style/InputLabel" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Ingresa tu correo"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:background="@drawable/input_background"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    style="@style/InputField" />
            </LinearLayout>

            <!-- Password Input Group -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                style="@style/InputGroup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text"
                    android:layout_marginBottom="6dp"
                    style="@style/InputLabel" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Ingresa tu contraseña"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@drawable/input_background"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    style="@style/InputField" />
            </LinearLayout>

            <!-- Error Message -->
            <TextView
                android:id="@+id/errorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/error"
                android:gravity="center"
                android:layout_marginTop="6dp"
                style="@style/ErrorMessage" />

            <!-- Submit Button -->
            <Button
                app:backgroundTint="@null"
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"/>


            <!-- Register Link -->
            <TextView
                android:id="@+id/registerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No tienes cuenta? Regístrate"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/primary"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                style="@style/RegisterLink" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
