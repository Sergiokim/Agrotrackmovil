<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background"
    tools:context=".EditPlantActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/edit_plant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Planta"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/EditPlantTitle" />

    <!-- Name EditText -->
    <EditText
        android:id="@+id/nombre_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:hint="Nombre"
        android:inputType="text"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="14dp"
        android:background="@drawable/input_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_plant_title"
        android:layout_marginTop="12dp"
        style="@style/InputField" />

    <!-- Scientific Name EditText -->
    <EditText
        android:id="@+id/nombre_cientifico_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:hint="Nombre cientÃ­fico (opcional)"
        android:inputType="text"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="14dp"
        android:background="@drawable/input_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombre_edit_text"
        android:layout_marginTop="12dp"
        style="@style/InputField" />

    <!-- Latitude EditText -->
    <EditText
        android:id="@+id/lat_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:hint="Latitud (opcional)"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="14dp"
        android:background="@drawable/input_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombre_cientifico_edit_text"
        android:layout_marginTop="12dp"
        style="@style/InputField" />

    <!-- Longitude EditText -->
    <EditText
        android:id="@+id/lon_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:hint="Longitud (opcional)"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="14dp"
        android:background="@drawable/input_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lat_edit_text"
        android:layout_marginTop="12dp"
        style="@style/InputField" />


    <!-- Button Row -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lon_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Guardar"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="6dp"
            app:backgroundTint="@null"
            style="@style/SubmitButton" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:background="@drawable/cancel_button_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="6dp"
            app:backgroundTint="@null"
            style="@style/ButtonSecondary" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
